{
    "name": "imav-2025",
    "image": "highflyers/imav-2025:latest",
    "remoteUser": "hf",
    "runArgs": [
        "--network=host",
        "--ipc=host",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "${localEnv:DOCKER_GPU_PARAM}",
        "--privileged"
    ],
    "workspaceMount": "source=${localWorkspaceFolder}/,target=/home/hf/ws/src/imav,type=bind,consistency=cached",
    "workspaceFolder": "/home/hf/ws/src/imav",
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "ROS_DOMAIN_ID": "0",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-iot.vscode-ros",
                "twxs.cmake",
                "ms-vscode.cpptools-extension-pack",
                "vivaxy.vscode-conventional-commits",
                "charliermarsh.ruff"
            ]
        }
    },
    "onCreateCommand": "./scripts/build.sh ./ --symlink-install"
}